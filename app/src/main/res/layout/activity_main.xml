<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
<!-- Rotlayout som organiserer skjerminnholdet -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Plassholder for fragmenter -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Horisontal layout for knappene -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <!-- ImageButton for "Avtaler" med kalender.png -->
        <ImageButton
            android:id="@+id/btnAvtaler"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@drawable/bordered_icon"
            android:src="@drawable/kalender"
            android:scaleType="fitCenter"
            android:padding="5dp"

             />

        <!-- ImageButton for "Kontakter" med kontakter.png -->
        <ImageButton
            android:id="@+id/btnKontakter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@drawable/bordered_icon"
            android:src="@drawable/kontakter"
            android:scaleType="fitCenter"
            android:padding="5dp"
             />

        <!-- ImageButton for "Preferanser" med pref.png -->
        <ImageButton
            android:id="@+id/btnPreferanser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@drawable/bordered_icon"
            android:src="@drawable/pref"
            android:scaleType="fitCenter"
            android:padding="5dp"

             />

    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>